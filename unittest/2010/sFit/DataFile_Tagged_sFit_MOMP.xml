	//==========================================
	// Specify which minimiser to use.

	<Minimiser>Minuit</Minimiser>
	<FitFunction>
		<WeightName>Nsig_sw</WeightName>
		<FunctionName>NegativeLogLikelihoodThreaded</FunctionName>
		<SetIntegratorTest>False</SetIntegratorTest>
		<Threads>128</Threads>
	</FitFunction>
	<NumberRepeats>1</NumberRepeats>

	//==========================================
	// Specify the fit

	//...................................
	// This applies a constraint on deltaM
	<ToFit>
		<ConstraintFunction>
			<ExternalConstraint>
				<Name>deltaM</Name>
				<Value>17.77</Value>
				<Error>0.12</Error>
			</ExternalConstraint>
		</ConstraintFunction>
	</ToFit>

	// Attempt to constrain LLscan on the amplitudes
	<ToFit>
		<ConstraintFunction>
			<ExternalConstraint>
				<Name>ATOTAL</Name>
				<Value>1.0</Value>
				<Error>0.00001</Error>
			</ExternalConstraint>
		</ConstraintFunction>
	</ToFit>

	// ....................
	// Attempt to constrain GH and GL positive
	<ToFit>
		<ConstraintFunction>
			<ExternalConstraint>
				<Name>GLandGH</Name>
				<Value>0.0</Value>
				<Error>0.00001</Error>
			</ExternalConstraint>
		</ConstraintFunction>
	</ToFit>

